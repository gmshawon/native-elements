@define-mixin dialog-config {
  /* Border API */
  --dialogBorder: var(--ne-dialog-border, 0);

  /* Background API */
  --dialogBackground: var(--ne-dialog-background, #FFF);

  /* Misc API */
  --dialogBorderRadius: var(--ne-dialog-radius, 5px);
  --dialogPadding: var(--ne-dialog-y-padding, 2rem) var(--ne-dialog-x-padding, 2rem);
  --dialogShadow: var(--ne-dialog-shadow, 0 19px 38px 0 rgba(0, 0, 0, 0.16), 0 15px 12px 0 rgba(0, 0, 0, 0.12));
  --dialogMaxWidth: var(--ne-dialog-max-width, 40rem);
}

@define-mixin dialog-backdrop-config {
  /* Misc API */
  --dialogBackdrop: var(--ne-dialog-backdrop, rgba(0, 0, 0, 0.3));
  --dialogBackdropFilter: var(--ne-dialog-backdrop-filter, blur(10px));
}
