    "postcss-easy-import": "3.0.0",
    "postcss-mixins": "6.2.0",
    "postcss-nesting": "4.2.1",
    "postcss-reporter": "5.0.0",
    "postcss-selector-not": "3.0.1",
    "stylelint": "9.1.1"
  }
}
