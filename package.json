  },
  "workspaces": [
    "elements/*"
  ],
  "engines": {
    "node": ">=8"
  },
  "paths": {
    "elements": "./elements",
    "scripts": "./scripts",
    "demo": "./demo"
  },
  "scripts": {
    "lint": "stylelint elements/**/*.pcss",
    "precommit": "yarn lint",
    "build": "yarn lint && yarn gulp --silent",
    "dev": "yarn gulp dev",
    "clean": "yarn gulp clean",
    "release": "git pull && yarn build && lerna publish --conventional-commits",
    "releas-nonpm": "git pull && yarn build && lerna publish --skip-npm --conventional-commits"
  },
  "files": [
    "elements"
  ],
  "keywords": [
    "elements",
    "components",
    "html",
    "css",
    "native",
    "npm",
    "ui",
    "kit"
  ],
  "devDependencies": {
    "@contactlab/stylelint-config-uxd": "1.1.3",
    "autoprefixer": "7.2.5",
    "babel-core": "6.26.0",
    "babel-plugin-root-import": "5.1.0",
    "babel-preset-env": "1.6.1",
    "browser-sync": "2.23.6",
    "chalk": "2.3.0",
    "cssnano": "3.10.0",
    "del": "3.0.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-postcss": "7.0.1",
    "gulp-rename": "1.2.2",
    "gulp-stats": "0.0.4",
    "husky": "0.14.3",
    "lerna": "2.8.0",
    "postcss-cli": "4.1.1",
